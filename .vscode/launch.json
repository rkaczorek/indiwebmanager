{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: INDI Web Manager",
      "type": "debugpy",
      "request": "launch",
      "module": "indiweb.main",
      "args": ["-v"],
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": false,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
